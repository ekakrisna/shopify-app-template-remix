// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model hubon {
  id                         Int     @id @default(autoincrement())
  sessionId                  String  @unique
  apiKey                     String  @db.LongText
  defaultProductId           String?
  defaultProductVariantId    String?
  additionalProductId        String?
  additionalProductVariantId String?
  thresholdPrice             String?
  shippingPrice              String?
}

model guide {
  id             Int     @id @default(autoincrement())
  sessionId      String  @unique
  isCarrier      Boolean @default(false)
  isPickupWidget Boolean @default(false)
  isButtonBuy    Boolean @default(false)
}

enum Status {
  FAILED
  SUCCESS
}

model order {
  id        Int       @id @default(autoincrement())
  sessionId String    @db.LongText
  status    Status    @default(FAILED)
  orderId   String
  response  String?   @db.LongText
  payload   String?   @db.LongText
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  deletedAt DateTime?
}
